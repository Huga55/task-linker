{
    "manifest_version": 2,
    "name": "Jira Comment Adder",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "https://*.atlassian.net/*"
    ],
    "background": {
      "scripts": ["scripts/background.js"]
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
      }
    },
    "content_scripts": [
      {
          "matches": ["https://jira.office.infomaximum.com/*"],
          "js": ["scripts/const.js", "scripts/contentScript.js"]
      }
    ]
  }